<div class="container container-table">
  <div class="row vertical-center-row">
    <div class="col-xs-12">
      <div class="well">
        <h1 class ="title-text">Log In</h1>
        <hr class="feature-divider">
        <%= form_tag log_in_index_path do %>
          <div class="field">
            <div class="field-title">
              <%= label_tag :user_name, "User Name: " %><br />
            </div>
            <div class="form-group">
              <%= text_field_tag :user_name, params[:user_name], :class => "form-control" %>
            </div>
          </div>
          <div class="field">
            <div class="field-title">
              <%= label_tag :password, "Password: " %><br />
            </div>
            <div class="form-group">
              <%= password_field_tag :password, nil, class: "form-control" %>
            </div>
          </div>
          <div class="actions"><%= submit_tag "Log in", :class => "log-in-btn" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br>
